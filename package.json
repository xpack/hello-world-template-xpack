{
  "name": "@xpack/hello-world-template",
  "version": "0.6.0",
  "description": "A template to generate Hello World projects",
  "main": "./index.js",
  "type": "module",
  "scripts": {
    "fix": "standard --fix",
    "test-clean": "del-cli build",
    "test": "node ./test/test.js",
    "test-ci": "node ./test/test.js ci",
    "test-all": "node ./test/test.js all",
    "test-develop": "node ./test/test.js develop",
    "npm-install": "npm install",
    "outdated": "npm outdated",
    "update": "npm update",
    "pack": "npm pack",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "npm-audit": "npm audit fix --force",
    "postversion": "git push origin --all && git push origin --tags",
    "git-log": "git log --pretty='%cd * %h %s' --date=short",
    "deep-clean": "del-cli build node_modules package-lock.json",
    "npm-version": "echo $(which node) $(node --version) && echo $(which npm) $(npm --version)"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xpack/hello-world-template-xpack.git"
  },
  "bugs": {
    "url": "https://github.com/xpack/hello-world-template-xpack/issues/"
  },
  "homepage": "https://github.com/xpack/hello-world-template-xpack/",
  "keywords": [
    "xpack",
    "template",
    "c++",
    "cmake",
    "meson"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "license": "MIT",
  "config": {},
  "engines": {
    "node": " >=16.14.0"
  },
  "dependencies": {
    "@ilg/cli-start-options": "^0.6.6",
    "cp-file": "^10.0.0",
    "git-config-path": "^2.0.0",
    "liquidjs": "^10.9.2",
    "make-dir": "^4.0.0",
    "parse-git-config": "^3.0.0"
  },
  "bundledDependencies": [
    "@ilg/cli-start-options",
    "cp-file",
    "git-config-path",
    "liquidjs",
    "make-dir",
    "parse-git-config"
  ],
  "devDependencies": {
    "del-cli": "^5.1.0",
    "shelljs": "^0.8.5",
    "standard": "^17.1.0",
    "xpm": "^0.17.0"
  },
  "xpack": {
    "minimumXpmRequired": "0.16.2"
  }
}
